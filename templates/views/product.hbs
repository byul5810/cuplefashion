<div class="container uk-margin-large-top">
  <div uk-grid>
    <div uk-grid class="uk-grid-small uk-width-2-3@s uk-width-1-2@m">
      <div class="uk-width-1-6@s" uk-lightbox="animation: scale">
        {{#each product.images.images}}
        <div class="uk-margin-small">
          <a class="uk-inline" href="{{cloudinaryUrl this}}" data-caption="Caption 1">
            <img src="{{cloudinaryUrl this}}" alt="product image">
          </a>
        </div>
        {{/each}}
      </div>
      <div class="uk-width-5-6@s" uk-lightbox="animation: scale">
        {{#each product.images.images}}
        {{#if @first}}
        <div>
          <a class="uk-inline" href="{{cloudinaryUrl this}}" data-caption="Caption 1">
            <img src="{{cloudinaryUrl this}}" alt="product image">
          </a>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>

    <div class="uk-width-1-3@s uk-width-1-2@m">
      <h1 class="uk-margin-medium-bottom">{{product.title}}</h1>
      <ul class="uk-margin-medium">
        <li>{{product.bulletPoint1}}</li>
        <li>{{product.bulletPoint2}}</li>
        <li>{{product.bulletPoint3}}</li>
        <li>{{product.bulletPoint4}}</li>
        <li>{{product.bulletPoint5}}</li>
      </ul>
    </div>
  </div>



  <div class="uk-margin-large">{{{product.description}}}</div>
</div>

