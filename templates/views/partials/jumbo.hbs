<div class="jumbotron portfolio-hero text-center" style="
background: url(
{{#each siteinfo}}
  {{#if @first}}
    {{#if mainImage}}
      {{cloudinaryUrl mainImage.image}}
    {{/if}}
  {{/if}}
{{/each}}
) no-repeat center center;
background-size: cover;
<!-- background-attachment: fixed; -->
">
  <div class="overlay">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h1>
            {{#each siteinfo}}
            {{#if @first}}
            {{this.title}}.
            {{#if this.role}}
            <span class="strong">{{this.role}}</span>.
            {{/if}}
            {{/if}}
            {{#if this.description}}
            <p>{{this.description}}</p>
            {{/if}}
            {{/each}}
          </h1>
        </div>
      </div>
    </div>
  </div>
</div>