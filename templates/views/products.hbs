<div class="container">
  <h1>Products</h1>
  <!-- if products -->
  {{!-- this 'products' refers to data set
  which was queried in products.js route file.
  so you can use Product database properties inside
  '#each products' block --}}
  {{#if products}}
  <div class="uk-child-width-1-2@m uk-child-width-1-3@l" uk-grid>
    {{#each products}}
    <div>
      <div class="uk-card uk-card-default product-card">
        <div class="uk-card-media-top">
          <img src="{{cloudinaryUrl mainImage.image}}" alt="thumbnail image of product">
        </div>
        <div class="uk-card-body">
          <p class="uk-card-title">{{title}}</p>
          <p class="product-price">$ {{price}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

</div>