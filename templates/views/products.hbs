<div class="container uk-margin-large-top">
  <h1 class="uk-margin-medium-bottom">Products</h1>
  <!-- if products -->
  {{!-- this 'products' refers to data set
  which was queried in products.js route file.
  so you can use Product database properties inside
  '#each products' block --}}

  {{#if products}}
  <div class="uk-child-width-1-2@s uk-child-width-1-3@m 
    uk-child-width-1-4@l" uk-grid>

    {{!--
    double each : outer each cannot be referenced without using "as | |"
    so gave name 'product' to refer below like product.title
    --}}
    {{#each products as |product|}}
    {{#each images.images}}
    {{#if @first}}
    <div>
      <div class="uk-card uk-card-default uk-card-hover 
        uk-animation-fade product-card">
        <a href="/product/{{product.slug}}">
          <div class="uk-card-media-top">
            <img src="{{cloudinaryUrl this}}" alt="thumbnail image of product">
          </div>
          <div class="uk-card-body">
            <p class="uk-card-title">{{product.title}}</p>
            <p class="product-price">$ {{product.price}}</p>
          </div>
        </a>
      </div>
    </div>
    {{/if}}
    {{/each}}
    {{/each}}
  </div>
  {{/if}}

</div>
